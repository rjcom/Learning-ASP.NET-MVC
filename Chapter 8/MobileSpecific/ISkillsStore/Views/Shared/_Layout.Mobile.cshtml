<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <script src="@Url.Content("~/Scripts/jquery-1.9.1.min.js")" type="text/javascript"></script>

    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap-theme.css" />

    <script src="@Url.Content("~/Scripts/jquery.mobile-1.1.2.min.js")" type="text/javascript"></script>

</head>
<body>
    <div data-role="page" id="page1">
        <div data-theme="a" data-role="header" data-position="fixed">
            <h3>ISkills Store</h3>
        </div>
        <div class="well">
            <ul>
                <li class="btn btn-default btn-xs">@Html.ActionLink("Home", "Index", "Home")</li>
                <li class="btn btn-default btn-xs">@Html.ActionLink("Shop", "Index", "Shop")</li>
                <li class="btn btn-default btn-xs">@Html.ActionLink("Cart", "Index", "ShoppingCart")</li>
                <li class="btn btn-default btn-xs">@Html.ActionLink("Login", "Index", "Login")</li>
                <li class="btn btn-default btn-xs">@Html.ActionLink("Register", "Index", "Register")</li>
            </ul>
        </div>
        <div data-role="content">
            <ul data-role="listview" data-divider-theme="b" data-inset="false">
                @RenderBody()
            </ul>
        </div>
    </div>

</body>
</html>
